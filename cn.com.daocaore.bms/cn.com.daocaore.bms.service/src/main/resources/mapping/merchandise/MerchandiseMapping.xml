<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.com.daocaore.monitor.merchandise.biz.dao.MerchandiseDao">
	<resultMap type="cn.com.daocaore.monitor.merchandise.biz.entity.Merchandise" id="BaseResultMap">
        <result property="id" column="id" javaType="Long"/>
        <result property="name" column="name" javaType="String"/>
        <result property="type" column="type" javaType="Integer"/>
        <result property="status" column="status" javaType="Integer"/>
        <result property="ctime" column="ctime" javaType="Date"/>
        <result property="etime" column="etime" javaType="Date"/>
        <result property="describes" column="describes" javaType="String"/>
        <result property="remarks" column="remarks" javaType="String"/>
        <result property="deleted" column="deleted" javaType="Integer"/>
	</resultMap>
	
	<sql id="full-columns" >
        t.id,
        t.name,
        t.type,
        t.status,
        t.ctime,
        t.etime,
        t.describes,
        t.remarks,
        t.deleted
	</sql>
	
	<!-- 查询条件 -->
	<sql id="queryCriteria">
		 <if test="@OGNL@isNotEmpty(id)">
            AND t.id = #{id}
         </if>
		 <if test="@OGNL@isNotEmpty(name)">
            AND t.name = #{name}
         </if>
		 <if test="@OGNL@isNotEmpty(type)">
            AND t.type = #{type}
         </if>
		 <if test="@OGNL@isNotEmpty(status)">
            AND t.status = #{status}
         </if>
		 <if test="@OGNL@isNotEmpty(ctime)">
            AND t.ctime = #{ctime}
         </if>
		 <if test="@OGNL@isNotEmpty(etime)">
            AND t.etime = #{etime}
         </if>
		 <if test="@OGNL@isNotEmpty(describes)">
            AND t.describes = #{describes}
         </if>
		 <if test="@OGNL@isNotEmpty(remarks)">
            AND t.remarks = #{remarks}
         </if>
		 <if test="@OGNL@isNotEmpty(deleted)">
            AND t.deleted = #{deleted}
         </if>
	</sql>

	<insert id="insert" parameterType="cn.com.daocaore.monitor.merchandise.biz.entity.Merchandise" >
		<![CDATA[
	        INSERT INTO merchandise (
	            name ,
	            type ,
	            status ,
	            ctime ,
	            etime ,
	            describes ,
	            remarks ,
	            deleted 
	        ) VALUES (
	        	#{name},
	        	#{type},
	        	#{status},
	        	now(),
	        	#{etime},
	        	#{describes},
	        	#{remarks},
	        	0
	        )
	    ]]>
    	<selectKey resultType="java.lang.Long" keyProperty="id">
			SELECT LAST_INSERT_ID() AS id
        </selectKey>
	</insert>
	
	<insert id="insertBatch" parameterType="java.util.List" >
		<![CDATA[
	        INSERT INTO merchandise (
	            name ,
	            type ,
	            status ,
	            ctime ,
	            etime ,
	            describes ,
	            remarks ,
	            deleted 
	        ) VALUES 
	        <foreach collection="list" item="item" index="index" separator=",">
	        (
	        	#{name},
	        	#{type},
	        	#{status},
	        	now(),
	        	#{etime},
	        	#{describes},
	        	#{remarks},
	        	0
	        )
	        </foreach>
	    ]]>
	</insert>
	
	<update id="delete" parameterType="java.lang.Long">
        UPDATE merchandise SET deleted=1 
        WHERE deleted=0 AND
        	id = #{value}
	</update>
	<update id="deleteBatch" parameterType="list" >
        UPDATE merchandise SET deleted=1 
        WHERE deleted=0 AND
        	id IN 
        <foreach collection="list" item = "id" open="(" separator="," close=")">
        	#{id}
		</foreach>
	</update>
	
	<update id="update" parameterType="cn.com.daocaore.monitor.merchandise.biz.entity.Merchandise">
        UPDATE merchandise 
        <set>
        	<if test="@OGNL@isNotEmpty(name)">
	            name = #{name},
	        </if>
        	<if test="@OGNL@isNotEmpty(type)">
	            type = #{type},
	        </if>
        	<if test="@OGNL@isNotEmpty(status)">
	            status = #{status},
	        </if>
        	<if test="@OGNL@isNotEmpty(ctime)">
	            ctime = #{ctime},
	        </if>
        	<if test="@OGNL@isNotEmpty(etime)">
	            etime = #{etime},
	        </if>
        	<if test="@OGNL@isNotEmpty(describes)">
	            describes = #{describes},
	        </if>
        	<if test="@OGNL@isNotEmpty(remarks)">
	            remarks = #{remarks},
	        </if>
        	<if test="@OGNL@isNotEmpty(deleted)">
	            deleted = #{deleted},
	        </if>
        </set>
        WHERE deleted=0
        	AND id = #{id}
	</update>
	
	<select id="getById" parameterType="java.lang.Long" resultMap="BaseResultMap">
	   	SELECT <include refid="full-columns" />
       	<![CDATA[
       	FROM merchandise t
       	WHERE t.id = #{value}
		]]>
    </select>
	
	<select id="query" parameterType="map" resultMap="BaseResultMap">
		SELECT <include refid="full-columns" />
	    FROM merchandise t
		<where> <include refid="queryCriteria"/>  </where>
		<if test="@OGNL@isNotEmpty(orderColumn) ">
        ORDER BY t.${orderColumn} <if test="@OGNL@isNotEmpty(orderDirection) ">${orderDirection}</if>
        </if>
	</select>
	
	<select id="queryPage" parameterType="map" resultMap="BaseResultMap">
		SELECT 
        <include refid="full-columns" />
            FROM merchandise t
		<where> <include refid="queryCriteria"/>  </where>
		<if test="@OGNL@isNotEmpty(orderColumn) ">
        ORDER BY t.${orderColumn} <if test="@OGNL@isNotEmpty(orderDirection) ">${orderDirection}</if>
        </if>
        LIMIT #{start}, #{pageSize}
	</select>

	<select id="queryCount" parameterType="map" resultType="java.lang.Integer">
		select count(id) FROM merchandise 
        <where> <include refid="queryCriteria"/>  </where>
	</select>
</mapper>
