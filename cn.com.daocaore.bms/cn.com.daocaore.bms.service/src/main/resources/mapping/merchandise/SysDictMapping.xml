<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.com.daocaore.monitor.sys.biz.dao.SysDictDao">
	<resultMap type="cn.com.daocaore.monitor.sys.biz.entity.SysDict" id="BaseResultMap">
        <result property="id" column="id" javaType="Integer"/>
        <result property="pid" column="pid" javaType="Integer"/>
        <result property="itemKey" column="item_key" javaType="String"/>
        <result property="itemValue" column="item_value" javaType="String"/>
        <result property="name" column="name" javaType="String"/>
        <result property="status" column="status" javaType="Integer"/>
        <result property="orderValue" column="order_value" javaType="Integer"/>
        <result property="ctime" column="ctime" javaType="Date"/>
        <result property="etime" column="etime" javaType="Date"/>
        <result property="comments" column="comments" javaType="String"/>
        <result property="deleted" column="deleted" javaType="Integer"/>
	</resultMap>
	
	<sql id="full-columns" >
        t.id,
        t.pid,
        t.item_key,
        t.item_value,
        t.name,
        t.status,
        t.order_value,
        t.ctime,
        t.etime,
        t.comments,
        t.deleted
	</sql>
	
	<!-- 查询条件 -->
	<sql id="queryCriteria">
		 <if test="@OGNL@isNotEmpty(id)">
            AND t.id = #{id}
         </if>
		 <if test="@OGNL@isNotEmpty(pid)">
            AND t.pid = #{pid}
         </if>
		 <if test="@OGNL@isNotEmpty(itemKey)">
            AND t.item_key = #{itemKey}
         </if>
		 <if test="@OGNL@isNotEmpty(itemValue)">
            AND t.item_value = #{itemValue}
         </if>
		 <if test="@OGNL@isNotEmpty(name)">
            AND t.name = #{name}
         </if>
		 <if test="@OGNL@isNotEmpty(status)">
            AND t.status = #{status}
         </if>
		 <if test="@OGNL@isNotEmpty(orderValue)">
            AND t.order_value = #{orderValue}
         </if>
		 <if test="@OGNL@isNotEmpty(ctime)">
            AND t.ctime = #{ctime}
         </if>
		 <if test="@OGNL@isNotEmpty(etime)">
            AND t.etime = #{etime}
         </if>
		 <if test="@OGNL@isNotEmpty(comments)">
            AND t.comments = #{comments}
         </if>
		 <if test="@OGNL@isNotEmpty(deleted)">
            AND t.deleted = #{deleted}
         </if>
	</sql>

	<insert id="insert" parameterType="cn.com.daocaore.monitor.sys.biz.entity.SysDict" >
		<![CDATA[
	        INSERT INTO sys_dict (
	            pid ,
	            item_key ,
	            item_value ,
	            name ,
	            status ,
	            order_value ,
	            ctime ,
	            etime ,
	            comments ,
	            deleted 
	        ) VALUES (
	        	#{pid},
	        	#{itemKey},
	        	#{itemValue},
	        	#{name},
	        	#{status},
	        	#{orderValue},
	        	now(),
	        	#{etime},
	        	#{comments},
	        	0
	        )
	    ]]>
    	<selectKey resultType="java.lang.Integer" keyProperty="id">
			SELECT LAST_INSERT_ID() AS id
        </selectKey>
	</insert>
	
	<insert id="insertBatch" parameterType="java.util.List" >
		<![CDATA[
	        INSERT INTO sys_dict (
	            pid ,
	            item_key ,
	            item_value ,
	            name ,
	            status ,
	            order_value ,
	            ctime ,
	            etime ,
	            comments ,
	            deleted 
	        ) VALUES 
	        <foreach collection="list" item="item" index="index" separator=",">
	        (
	        	#{pid},
	        	#{itemKey},
	        	#{itemValue},
	        	#{name},
	        	#{status},
	        	#{orderValue},
	        	now(),
	        	#{etime},
	        	#{comments},
	        	0
	        )
	        </foreach>
	    ]]>
	</insert>
	
	<update id="delete" parameterType="java.lang.Integer">
        UPDATE sys_dict SET deleted=1 
        WHERE deleted=0 AND
        	id = #{value}
	</update>
	<update id="deleteBatch" parameterType="list" >
        UPDATE sys_dict SET deleted=1 
        WHERE deleted=0 AND
        	id IN 
        <foreach collection="list" item = "id" open="(" separator="," close=")">
        	#{id}
		</foreach>
	</update>
	
	<update id="update" parameterType="cn.com.daocaore.monitor.sys.biz.entity.SysDict">
        UPDATE sys_dict 
        <set>
        	<if test="@OGNL@isNotEmpty(pid)">
	            pid = #{pid},
	        </if>
        	<if test="@OGNL@isNotEmpty(itemKey)">
	            item_key = #{itemKey},
	        </if>
        	<if test="@OGNL@isNotEmpty(itemValue)">
	            item_value = #{itemValue},
	        </if>
        	<if test="@OGNL@isNotEmpty(name)">
	            name = #{name},
	        </if>
        	<if test="@OGNL@isNotEmpty(status)">
	            status = #{status},
	        </if>
        	<if test="@OGNL@isNotEmpty(orderValue)">
	            order_value = #{orderValue},
	        </if>
        	<if test="@OGNL@isNotEmpty(ctime)">
	            ctime = #{ctime},
	        </if>
        	<if test="@OGNL@isNotEmpty(etime)">
	            etime = #{etime},
	        </if>
        	<if test="@OGNL@isNotEmpty(comments)">
	            comments = #{comments},
	        </if>
        	<if test="@OGNL@isNotEmpty(deleted)">
	            deleted = #{deleted},
	        </if>
        </set>
        WHERE deleted=0
        	AND id = #{id}
	</update>
	
	<select id="getById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
	   	SELECT <include refid="full-columns" />
       	<![CDATA[
       	FROM sys_dict t
       	WHERE t.id = #{value}
		]]>
    </select>
	
	<select id="query" parameterType="map" resultMap="BaseResultMap">
		SELECT <include refid="full-columns" />
	    FROM sys_dict t
		<where> <include refid="queryCriteria"/>  </where>
		<if test="@OGNL@isNotEmpty(orderColumn) ">
        ORDER BY t.${orderColumn} <if test="@OGNL@isNotEmpty(orderDirection) ">${orderDirection}</if>
        </if>
	</select>
	
	<select id="queryPage" parameterType="map" resultMap="BaseResultMap">
		SELECT 
        <include refid="full-columns" />
            FROM sys_dict t
		<where> <include refid="queryCriteria"/>  </where>
		<if test="@OGNL@isNotEmpty(orderColumn) ">
        ORDER BY t.${orderColumn} <if test="@OGNL@isNotEmpty(orderDirection) ">${orderDirection}</if>
        </if>
        LIMIT #{start}, #{pageSize}
	</select>

	<select id="queryCount" parameterType="map" resultType="java.lang.Integer">
		select count(id) FROM sys_dict 
        <where> <include refid="queryCriteria"/>  </where>
	</select>
</mapper>
