<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.com.yuzhushui.movie.sys.biz.dao.SysAccountDao">
	<resultMap type="cn.com.yuzhushui.movie.sys.biz.entity.SysAccount" id="BaseResultMap">
        <result property="accountId" column="account_id" javaType="Integer"/>
        <result property="account" column="account" javaType="String"/>
        <result property="mobilephone" column="mobilephone" javaType="String"/>
        <result property="email" column="email" javaType="String"/>
        <result property="password" column="password" javaType="String"/>
        <result property="status" column="status" javaType="Integer"/>
        <result property="ctime" column="ctime" javaType="Date"/>
        <result property="creater" column="creater" javaType="String"/>
        <result property="createrId" column="creater_id" javaType="Integer"/>
        <result property="etime" column="etime" javaType="Date"/>
        <result property="editor" column="editor" javaType="String"/>
        <result property="editorId" column="editor_id" javaType="Integer"/>
        <result property="comments" column="comments" javaType="String"/>
        <result property="deleted" column="deleted" javaType="Integer"/>
	</resultMap>
	
	<sql id="full-columns" >
        t.account_id,
        t.account,
        t.mobilephone,
        t.email,
        t.password,
        t.status,
        t.ctime,
        t.creater,
        t.creater_id,
        t.etime,
        t.editor,
        t.editor_id,
        t.comments,
        t.deleted
	</sql>
	
	<!-- 查询条件 -->
	<sql id="queryCriteria">
		 <if test="@OGNL@isNotEmpty(accountId)">
            AND t.account_id = #{accountId}
         </if>
		 <if test="@OGNL@isNotEmpty(account)">
            AND t.account = #{account}
         </if>
		 <if test="@OGNL@isNotEmpty(mobilephone)">
            AND t.mobilephone = #{mobilephone}
         </if>
		 <if test="@OGNL@isNotEmpty(email)">
            AND t.email = #{email}
         </if>
		 <if test="@OGNL@isNotEmpty(password)">
            AND t.password = #{password}
         </if>
		 <if test="@OGNL@isNotEmpty(status)">
            AND t.status = #{status}
         </if>
		 <if test="@OGNL@isNotEmpty(ctime)">
            AND t.ctime = #{ctime}
         </if>
		 <if test="@OGNL@isNotEmpty(creater)">
            AND t.creater = #{creater}
         </if>
		 <if test="@OGNL@isNotEmpty(createrId)">
            AND t.creater_id = #{createrId}
         </if>
		 <if test="@OGNL@isNotEmpty(etime)">
            AND t.etime = #{etime}
         </if>
		 <if test="@OGNL@isNotEmpty(editor)">
            AND t.editor = #{editor}
         </if>
		 <if test="@OGNL@isNotEmpty(editorId)">
            AND t.editor_id = #{editorId}
         </if>
		 <if test="@OGNL@isNotEmpty(comments)">
            AND t.comments = #{comments}
         </if>
		 <if test="@OGNL@isNotEmpty(deleted)">
            AND t.deleted = #{deleted}
         </if>
	</sql>

	<insert id="insert" parameterType="cn.com.yuzhushui.movie.sys.biz.entity.SysAccount" >
		<![CDATA[
	        INSERT INTO sys_account (
	            account ,
	            mobilephone ,
	            email ,
	            password ,
	            status ,
	            ctime ,
	            creater ,
	            creater_id ,
	            etime ,
	            editor ,
	            editor_id ,
	            comments ,
	            deleted 
	        ) VALUES (
	        	#{account},
	        	#{mobilephone},
	        	#{email},
	        	#{password},
	        	#{status},
	        	now(),
	        	#{creater},
	        	#{createrId},
	        	#{etime},
	        	#{editor},
	        	#{editorId},
	        	#{comments},
	        	0
	        )
	    ]]>
    	<selectKey resultType="java.lang.Integer" keyProperty="accountId">
			SELECT LAST_INSERT_ID() AS account_id
        </selectKey>
	</insert>
	
	<insert id="insertBatch" parameterType="java.util.List" >
		<![CDATA[
	        INSERT INTO sys_account (
	            account ,
	            mobilephone ,
	            email ,
	            password ,
	            status ,
	            ctime ,
	            creater ,
	            creater_id ,
	            etime ,
	            editor ,
	            editor_id ,
	            comments ,
	            deleted 
	        ) VALUES 
	        <foreach collection="list" item="item" index="index" separator=",">
	        (
	        	#{account},
	        	#{mobilephone},
	        	#{email},
	        	#{password},
	        	#{status},
	        	now(),
	        	#{creater},
	        	#{createrId},
	        	#{etime},
	        	#{editor},
	        	#{editorId},
	        	#{comments},
	        	0
	        )
	        </foreach>
	    ]]>
	</insert>
	
	<update id="delete" parameterType="java.lang.Integer">
        UPDATE sys_account SET deleted=1 
        WHERE deleted=0 AND
        	account_id = #{value}
	</update>
	<update id="deleteBatch" parameterType="list" >
        UPDATE sys_account SET deleted=1 
        WHERE deleted=0 AND
        	account_id IN 
        <foreach collection="list" item = "id" open="(" separator="," close=")">
        	#{id}
		</foreach>
	</update>
	
	<update id="update" parameterType="cn.com.yuzhushui.movie.sys.biz.entity.SysAccount">
        UPDATE sys_account 
        <set>
        	<if test="@OGNL@isNotEmpty(account)">
	            account = #{account},
	        </if>
        	<if test="@OGNL@isNotEmpty(mobilephone)">
	            mobilephone = #{mobilephone},
	        </if>
        	<if test="@OGNL@isNotEmpty(email)">
	            email = #{email},
	        </if>
        	<if test="@OGNL@isNotEmpty(password)">
	            password = #{password},
	        </if>
        	<if test="@OGNL@isNotEmpty(status)">
	            status = #{status},
	        </if>
        	<if test="@OGNL@isNotEmpty(ctime)">
	            ctime = #{ctime},
	        </if>
        	<if test="@OGNL@isNotEmpty(creater)">
	            creater = #{creater},
	        </if>
        	<if test="@OGNL@isNotEmpty(createrId)">
	            creater_id = #{createrId},
	        </if>
        	<if test="@OGNL@isNotEmpty(etime)">
	            etime = #{etime},
	        </if>
        	<if test="@OGNL@isNotEmpty(editor)">
	            editor = #{editor},
	        </if>
        	<if test="@OGNL@isNotEmpty(editorId)">
	            editor_id = #{editorId},
	        </if>
        	<if test="@OGNL@isNotEmpty(comments)">
	            comments = #{comments},
	        </if>
        	<if test="@OGNL@isNotEmpty(deleted)">
	            deleted = #{deleted},
	        </if>
        </set>
        WHERE deleted=0
        	AND account_id = #{accountId}
	</update>
	
	<select id="getById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
	   	SELECT <include refid="full-columns" />
       	<![CDATA[
       	FROM sys_account t
       	WHERE t.account_id = #{value}
		]]>
    </select>
	
	<select id="query" parameterType="map" resultMap="BaseResultMap">
		SELECT <include refid="full-columns" />
	    FROM sys_account t
		<where> <include refid="queryCriteria"/>  </where>
		<if test="@OGNL@isNotEmpty(orderColumn) ">
        ORDER BY t.${orderColumn} <if test="@OGNL@isNotEmpty(orderDirection) ">${orderDirection}</if>
        </if>
	</select>
	
	<select id="queryPage" parameterType="map" resultMap="BaseResultMap">
		SELECT 
        <include refid="full-columns" />
            FROM sys_account t
		<where> <include refid="queryCriteria"/>  </where>
		<if test="@OGNL@isNotEmpty(orderColumn) ">
        ORDER BY t.${orderColumn} <if test="@OGNL@isNotEmpty(orderDirection) ">${orderDirection}</if>
        </if>
        LIMIT #{start}, #{pageSize}
	</select>

	<select id="queryCount" parameterType="map" resultType="java.lang.Integer">
		select count(account_id) FROM sys_account 
        <where> <include refid="queryCriteria"/>  </where>
	</select>
</mapper>
